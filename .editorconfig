# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# For every file:
#  - Unix-style newlines with a newline ending
#  - Use tab character
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[{*.config,*.xml,package.json,bower.json}]
indent_style = space
indent_size = 2
